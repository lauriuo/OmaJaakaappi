<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.foodDiary.FoodDiaryDateController">
   <top>
      <Label alignment="CENTER" prefHeight="30.0" prefWidth="200.0" text="Food diary with a selected date" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Select the date">
               <VBox.margin>
                  <Insets left="119.0" />
               </VBox.margin></Label>
            <HBox prefHeight="70.0" prefWidth="700.0">
               <children>
                  <DatePicker fx:id="rpkSelectDate" promptText="Date">
                     <HBox.margin>
                        <Insets left="119.0" />
                     </HBox.margin></DatePicker>
                  <Button fx:id="rpkSeachButton" mnemonicParsing="false" onAction="#searchRpk" text="Search">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="700.0">
               <children>
                  <Label alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="200.0" text="Food diary from the date: ">
                     <HBox.margin>
                        <Insets left="150.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lblDate" prefHeight="30.0" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox prefHeight="400.0" prefWidth="700.0">
               <children>
                  <TableView fx:id="tableView" prefHeight="259.0" prefWidth="462.0">
                    <columns>
                      <TableColumn fx:id="rpkIdColumn" prefWidth="50.0" text="ID" />
                      <TableColumn fx:id="rpkProductColumn" prefWidth="150.0" text="Product" />
                        <TableColumn fx:id="rpkCaloriesColumn" minWidth="80.0" text="Calories" />
                        <TableColumn fx:id="rpkAmountColumn" minWidth="80.0" text="Amount" />
                        <TableColumn fx:id="rpkUsageColumn" prefWidth="100.0" text="Usage" />
                    </columns>
                     <HBox.margin>
                        <Insets left="119.0" />
                     </HBox.margin>
                  </TableView>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
