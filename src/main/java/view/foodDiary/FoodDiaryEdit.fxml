<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.foodDiary.FoodDiaryEditController">
   <top>
      <Label alignment="CENTER" prefHeight="30.0" prefWidth="200.0" text="Edit food diary" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="ID of the food diary entry">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Label>
            <HBox prefHeight="50.0" prefWidth="700.0">
               <children>
                  <TextField fx:id="searchRpk" promptText="ID" />
                  <Button mnemonicParsing="false" onAction="#searchRpkAction" text="Search">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="700.0">
               <children>
                  <Label text="Product">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label layoutX="10.0" layoutY="10.0" text="Amount">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label layoutX="52.0" layoutY="10.0" text="Date">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label layoutX="95.0" layoutY="10.0" text="Usage">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="77.0" prefHeight="30.0" prefWidth="700.0">
               <children>
                  <Label fx:id="lblProduct">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lblOldAmount" layoutX="10.0" layoutY="10.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lblOldDate" layoutX="52.0" layoutY="10.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lblOldUsage" layoutX="95.0" layoutY="10.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="107.0" prefHeight="30.0" prefWidth="700.0">
               <children>
                  <Label layoutX="10.0" layoutY="10.0" text="The new amount">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label layoutX="52.0" layoutY="10.0" text="The new date">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label layoutX="95.0" layoutY="10.0" text="The new usage">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox layoutX="10.0" layoutY="119.0" prefHeight="30.0" prefWidth="700.0">
               <children>
                  <TextField fx:id="rpkNewAmount" layoutX="10.0" layoutY="10.0" promptText="New amount">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
                  <DatePicker fx:id="rpkNewDate" promptText="New date">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </DatePicker>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <RadioButton fx:id="rpkSelectUsed" mnemonicParsing="false" selected="true" text="Used">
                           <toggleGroup>
                              <ToggleGroup fx:id="newStatusSelect" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="rpkSelectWaste" mnemonicParsing="false" text="Waste" toggleGroup="$newStatusSelect" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#rpkUpdateAction" text="Commit" />
            <Label text="Food diary" />
            <HBox prefHeight="222.0" prefWidth="700.0">
               <children>
                  <TableView fx:id="tableView" prefHeight="255.0" prefWidth="562.0">
                    <columns>
                      <TableColumn fx:id="rpkIdColumn" prefWidth="50.0" text="ID" />
                      <TableColumn fx:id="rpkProductColumn" prefWidth="150.0" text="Product" />
                        <TableColumn fx:id="rpkCaloriesColumn" minWidth="80.0" text="Calories" />
                        <TableColumn fx:id="rpkAmountColumn" minWidth="80.0" text="Amount" />
                        <TableColumn fx:id="rpkDateColumn" minWidth="100.0" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="rpkUsageColumn" prefWidth="100.0" text="Usage" />
                    </columns>
                     <HBox.margin>
                        <Insets left="69.0" />
                     </HBox.margin>
                  </TableView>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
